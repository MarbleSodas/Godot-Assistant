# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Model Configuration
DEFAULT_PLANNING_MODEL=openrouter/sherlock-think-alpha
FALLBACK_MODEL=openai/gpt-5.1-codex

# Agent Configuration
AGENT_TEMPERATURE=0.7
AGENT_MAX_TOKENS=4000

# Application Configuration
APP_NAME=Godot-Assistant
APP_URL=http://localhost:8000

# MCP (Model Context Protocol) Configuration
# Enable/disable MCP tools integration
ENABLE_MCP_TOOLS=true
# Continue agent operation if MCP servers fail to connect
MCP_FAIL_SILENTLY=true

# Sequential Thinking MCP Server
# Provides advanced step-by-step reasoning for complex problems
ENABLE_SEQUENTIAL_THINKING=true
SEQUENTIAL_THINKING_COMMAND=uvx
SEQUENTIAL_THINKING_ARGS=mcp-server-sequential-thinking

# Context7 MCP Server
# Provides up-to-date library documentation fetching
ENABLE_CONTEXT7=true
CONTEXT7_COMMAND=npx
CONTEXT7_ARGS=-y,@context7/mcp-server
